# Zombie Game - Environment Variables Configuration
# Copy this file to .env and configure for your environment

# ===============================================
# SERVER CONFIGURATION
# ===============================================

# Server port
PORT=3000

# Node environment (development | production)
NODE_ENV=development

# ===============================================
# SECURITY CONFIGURATION
# ===============================================

# Allowed CORS origins (comma-separated)
# In production, set to your actual domain(s)
# Example: https://yourdomain.com,https://www.yourdomain.com
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ===============================================
# DATABASE CONFIGURATION
# ===============================================

# SQLite database path
DB_PATH=./data/game.db

# ===============================================
# LOGGING CONFIGURATION
# ===============================================

# Log level (error | warn | info | debug)
# Use 'info' in production, 'debug' in development
LOG_LEVEL=debug

# Log directory for file output (production only)
LOG_DIR=./logs

# ===============================================
# AUTHENTICATION (TODO: Implement JWT)
# ===============================================

# JWT Secret (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
# JWT_SECRET=your-secret-key-here

# JWT Expiration (e.g., 24h, 7d, 30d)
# JWT_EXPIRES_IN=24h

# ===============================================
# RATE LIMITING
# ===============================================

# API rate limit window (milliseconds)
RATE_LIMIT_WINDOW_MS=900000

# API rate limit max requests per window
RATE_LIMIT_MAX=100

# ===============================================
# GAME CONFIGURATION (Optional overrides)
# ===============================================

# Player speed (default: 5)
# PLAYER_SPEED=5

# Maximum players per server
# MAX_PLAYERS=50

# Session timeout (milliseconds)
# SESSION_TIMEOUT=300000
