{
  "name": "zombie-multiplayer-game",
  "version": "1.0.0",
  "description": "Jeu de zombie multijoueur en temps r√©el sur navigateur",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\"",
    "deploy:server": "node deploy-server.js",
    "deploy:install": "cp com.zombiegame.deploy.plist ~/Library/LaunchAgents/ && launchctl load ~/Library/LaunchAgents/com.zombiegame.deploy.plist",
    "deploy:uninstall": "launchctl unload ~/Library/LaunchAgents/com.zombiegame.deploy.plist && rm ~/Library/LaunchAgents/com.zombiegame.deploy.plist",
    "deploy:restart": "launchctl stop com.zombiegame.deploy && launchctl start com.zombiegame.deploy",
    "deploy:logs": "tail -f deploy.log"
  },
  "keywords": [
    "game",
    "zombie",
    "multiplayer",
    "websocket"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@msgpack/msgpack": "^3.1.3",
    "better-sqlite3": "^12.4.1",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "socket.io": "^4.6.1",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.6.2"
  }
}
